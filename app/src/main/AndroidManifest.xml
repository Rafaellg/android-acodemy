<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rafaelguimas.acodemy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.rafaelguimas.acodemy.ApplicationMain"
        android:allowBackup="true"
        android:icon="@drawable/icon_beta"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.rafaelguimas.acodemy.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rafaelguimas.acodemy.activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait"/>
    </application>

</manifest>