<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rafaelguimas.acodemy.fragment.IntroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_normal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/text_paragraph_1" />

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/activity_lifecycle"
            android:layout_height="400dp"
            android:layout_marginTop="@dimen/dimen_normal"
            android:layout_marginBottom="@dimen/dimen_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/text_paragraph_2" />

    </LinearLayout>


</ScrollView>
