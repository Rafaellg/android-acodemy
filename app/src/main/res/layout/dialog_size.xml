<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/dimen_large">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_normal">

        <TextView
            android:text="@string/text_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtWidth"
            android:text="0dp"
            android:layout_marginLeft="@dimen/dimen_short" />

        <com.bq.markerseekbar.MarkerSeekBar
            android:id="@+id/sekWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="300"
            app:markerColor="@color/colorPrimary"
            app:markerTextColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/text_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHeight"
            android:layout_marginLeft="@dimen/dimen_short"
            android:layout_marginRight="11dp"
            android:text="0dp" />

        <com.bq.markerseekbar.MarkerSeekBar
            android:id="@+id/sekHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="300"
            app:markerColor="@color/colorPrimary"
            app:markerTextColor="#ffffff" />
    </LinearLayout>

</LinearLayout>