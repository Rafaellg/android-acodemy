<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.category.buttom.SBComponentFragment"
    android:background="@color/bgPrimaryColor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioDemo1"
            android:layout_gravity="center"
            android:text="@string/text_option_1"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioDemo2"
            android:layout_gravity="center"
            android:text="@string/text_option_2"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff" />

    </LinearLayout>
</FrameLayout>
